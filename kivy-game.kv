# Game.kv

<Game>:
    rows: 3
    canvas:
        Color:
            rgb: 0.88, 0.97, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg.png'
            #allow_stretch: True
    BoxLayout:
        #FloatLayout:
        GameImage:
            #size: root.width *0.01, root.height * 0.05
            #size_hint: 0.2,0.2
            #pos: self.x+10,self.y
            source: 'images/scissor.png'
            allow_stretch: True
            keep_ratio: False
            
        GameImage:
            source: 'images/paper.png'
            allow_stretch: True
            keep_ratio: False
            
        GameImage:
            source: 'images/rock.png'
            allow_stretch: True
            keep_ratio: False
    BoxLayout:
        Label:
            canvas.before:
                Color:
                    rgb: 0.43, 0.5, 0.5, 0.3
                Rectangle:
                    size: self.width-100,self.height-100
                    pos: self.x+50,self.y+50
            size_hint_x: 2
            color: 0.9,1,1,1
            font_name: 'NotoSansCJKsc-Bold.otf'
            text: app.context
            markup: True
    BoxLayout:
        
        FloatLayout:
            #pos_hint: {'top': 1}
            RestartImage:
                size: root.width *0.01, root.height * 0.1
                size_hint: 0.3,0.4
                pos: root.x + root.width/2.8 ,root.y + root.height/5
                source: 'btn.png'
                allow_stretch: True
                keep_ratio: False

    